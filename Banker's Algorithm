#include<iostream>
using namespace std;

int main()
{
	int available[2];
	int allocated[3][2];
	int max[3][2];
	int needed[3][2];
	int exec[]={0,0,0};
	int count=3;
	int iniallocated[3][2];
	int inimax[3][2];
	int c;

for(int j=0;j<2;j++)
{
cout<<"Enter available resources of type"<<j<<"\n";
cin>>available[j];
}


for(int i=0;i<3;i++)
{
	for(int j=0;j<2;j++)
	{
		cout<<"Enter the value of maximum resource of type "<<j<<"for process "<<i<<endl;
		cin>>max[i][j];
		inimax[i][j]=max[i][j];
	}

}

for(int i=0;i<3;i++)
{
	for(int j=0;j<2;j++)
	{
		cout<<"Enter the value of allocated resource of type "<<j<<"for process "<<i<<endl;
		cin>>allocated[i][j];
		iniallocated[i][j]=allocated[i][j];
	}

}

for(int i=0;i<3;i++)
{
	for(int j=0;j<2;j++)
	{
		needed[i][j]=max[i][j]-allocated[i][j];
	}

}
while(count>0)
{
for(int i=0;i<3;i++)
{	if(exec[i]==0)
	{
		for(int j=0;j<2;j++)
		{
			if(available[j]>=needed[i][j])
			{
				c++;
			}

		}
	if(c==2)
	{	for(int j=0;j<2;j++)
		{
			available[j]+=allocated[i][j];
			allocated[i][j]=0;
			max[i][j]=0;
		}
		exec[i]=1;
		cout<<"Process "<<i+1<<" is executed";
		c=0;
		break;
	}
	}
	count--;
}
}

for(int i=0;i<3;i++)
{
	if(exec[i]!=1)
	{
		cout<<"The system is in unsafe state";
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<2;j++)
			{
				allocated[i][j]=iniallocated[i][j];
				available[j]-=allocated[i][j];
				max[i][j]=inimax[i][j];
			}
		}
		break;
	}

}

return 0;
}
