#include<iostream>
using namespace std;
int main()
{

int a=5;
int b=4;
int j=3;
int process[3];
int allocatedA[3];
int allocatedB[3];
int maxA[3];
int maxB[3];

int remainingA=5;
int remainingB=4;
int execA[3];
int execB[3];

for(int i=0;i<3;i++)
{
	cout<<"Enter the process number ";
	cin>>process[i];
	cout<<"Enter the A resources allocated to process "<<process[i]<<endl;
	cin>>allocatedA[i];
	cout<<"Enter the B resources allocated to process "<<process[i]<<endl;
	cin>>allocatedB[i];
	cout<<"Enter the max A resources required for process "<<process[i]<<endl;
	cin>>maxA[i];
	cout<<"Enter the max B resources required for process "<<process[i]<<endl;
	cin>>maxB[i];
}

for(int i=0;i<3;i++)
{
	execA[i]=0;
	execB[i]=0;
}
for(int i=0;i<3;i++)
{
	remainingA=remainingA-allocatedA[i];
	remainingB=remainingB-allocatedB[i];
}

while(j>0)
{
	for(int i=0;i<3;i++)
	{
	if(remainingA>=maxA[i]-allocatedA[i])
		{
			remainingA=remainingA+allocatedA[i];
			maxA[i]=100;
			cout<<"process "<<process[i]<<" executed for a"<<endl;	
			execA[i]=1;			
			break;
		}
	
	} 
j--;
}

j=3;
while(j>0)
{
	for(int i=0;i<3;i++)
	{
	if(remainingB>=maxB[i]-allocatedB[i])
		{
			remainingB=remainingB+allocatedB[i];
			maxB[i]=100;
			cout<<"process "<<process[i]<<" executed for b"<<endl;	
			execB[i]=1;			
			break;
		}
	
	} 
j--;
}
for(int i=0;i<3;i++)
{
	if(execA[i]==0)
	{
		cout<<"Deadlock has occured for resource A";
	}
	if(execB[i]==0)
	{
		cout<<"Deadlock has occured for resource B";
	}
}
return 0;
}
